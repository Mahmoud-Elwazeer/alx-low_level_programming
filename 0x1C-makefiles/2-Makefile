# name of the executable: school

# CC: the compiler to be used
CC = gcc

# SRC: the .c files
SRC = main.c school.c

# OBJ: the .o files
OBJ = main.o school.o

# NAME: the name of the executable
NAME = school

all: $(NAME)

$(OBJ): %.o: %.c
	$(CC) -c -o $@ $<

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	rm -f $(OBJ)
