# name of the executable: school

# CC: the compiler to be used
CC = gcc

# SRC: the .c files
SRC = main.c school.c

# OBJ: the .o files
IBJ = main.o school.o

# NAME: the name of the executable
NAME = school

all: $(NAME)

$(IBJ): %.o: %.c
	$(CC) -c -o $@ $<

$(NAME): $(IBJ)
	$(CC) $(IBJ) -o $(NAME)

clean:
	rm -f $(IBJ)
