# name of the executable: school

# CC: the compiler to be used
CC = gcc

# SRC: the .c files
SRC = main.c school.c

# OBJ: the .o files
IBJ = main.o school.o

# NAME: the name of the executable
NAME = school

all: $(NAME)

$(NAME): $(IBJ)
	$(CC) $(IBJ) -o $(NAME)

main.o: main.c
	$(CC) 	-c -o main.o main.c

school.o: school.c
	$(CC) 	-c -o school.o school.c

clean:
	rm -f $(IBJ)
